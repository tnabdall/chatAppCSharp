<Window x:Class="ChatApp.ChatWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChatApp"
        mc:Ignorable="d"
        Title="Chat App" Height="450" Width="800">
    <Grid>
        <Canvas HorizontalAlignment="Left" Height="419" VerticalAlignment="Top" Width="792">
            <Border BorderBrush="Black" BorderThickness="3" Height="266" Canvas.Left="54" Canvas.Top="45" Width="666">
                <TextBox x:Name="chatTextBox" TextWrapping="Wrap" Text="" VerticalScrollBarVisibility="Auto" IsReadOnly="True"/>
            </Border>
            <TextBox x:Name="messageTextBox" FontSize="18" Canvas.Left="138" TextWrapping="Wrap" Text="" Canvas.Top="346" Width="582" KeyDown="MessageTextBox_KeyDown"/>
            <Label x:Name="messageLabel" Content="Message:" Canvas.Left="40" FontSize="20" FontWeight="Bold" Canvas.Top="339"/>
        </Canvas>

    </Grid>
</Window>
